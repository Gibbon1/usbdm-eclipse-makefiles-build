      </condition>
      <condition variable="UART-setup-MKE06">
         <copy source="Startup_Code/uart-mke.c" target="Startup_Code/uart.c" />
         <copy source="Project_Headers/uart.h" target="Project_Headers/uart.h" />
      </condition>
   </projectActionList>
</root>