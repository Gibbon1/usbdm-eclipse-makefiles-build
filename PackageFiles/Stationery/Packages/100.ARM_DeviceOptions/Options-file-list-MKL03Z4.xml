<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE root SYSTEM "../package.dtd">

<root version="1.0">
   <!-- Extra Optional files for MKL03 -->
   <projectActionList id="Options-file-list-MKL03Z4">
      <applyWhen>
         <or>
            <deviceSubfamilyIs>MKL03Z4</deviceSubfamilyIs>
         </or>
      </applyWhen>
      <variable id="Clock-setup-MKL03" name="Clock setup code" description="Adds code for basic clock initialization - check assumptions made" />
      <variable id="UART-setup-MKL03" name="UART setup code" description="Adds C stdio (UART) support for newlib" />
      <condition variable="Clock-setup-MKL03">
         <copy source="Startup_Code/clock-MKL03.c" target="Startup_Code/clock.c" />
         <copy source="Project_Headers/clock_configure-MKL03.h" target="Project_Headers/clock_configure.h" />
      </condition>
      <condition variable="UART-setup-MKL03">
         <copy source="Startup_Code/uart-mkl-lp.c" target="Startup_Code/uart.c" />
         <copy source="Project_Headers/uart.h" target="Project_Headers/uart.h" />
      </condition>
   </projectActionList>
</root>