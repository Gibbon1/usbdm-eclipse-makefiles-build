<?xml version="1.0" encoding="utf-8"?>
<toolchains>
  <toolchain id="net.sourceforge.usbdm.cdt.arm">
    <supportedFamilies>
      <supportedFamily>
        <family>Kinetis</family>
        <compiler>GNU C Compiler (USBDM)</compiler>
      </supportedFamily>
    </supportedFamilies>
    
    <tool id="net.sourceforge.usbdm.cdt.arm.toolchain.c.compiler">
      <option id="gnu.c.compiler.option.misc.other" 
        type="string" 
        mode="append" 
        value="-c -fmessage-length=0 -mcpu=cortex-m0 -mabi=aapcs -mthumb -msoft-float" 
        projectType="pe" 
        description="Set compiler to use Cortex M0+ core (disable if nor applicable)"
      />
      <option id="gnu.c.compiler.option.misc.other" 
        type="string" 
        mode="append" 
        value="-c -fmessage-length=0 -mcpu=cortex-m4 -mabi=aapcs -mthumb -msoft-float" 
        projectType="pe" 
        description="Set compiler to use Cortex M4 core without FPU (disable if nor applicable)"
      />
      <option id="gnu.c.compiler.option.misc.other" 
        type="string" 
        mode="append" 
        value="-c -fmessage-length=0 -mcpu=cortex-m4 -mabi=aapcs -mthumb -mfloat-abi=hard -mfpu=fpv4-sp-d16" 
        projectType="pe" 
        description="Set compiler to use Cortex M4 core with FPU (disable if nor applicable)"
      />
    </tool>      
    <tool id="net.sourceforge.usbdm.cdt.arm.toolchain.c.linker">
      <option id="net.sourceforge.usbdm.cdt.toolchain.c.linker.linkerFile" 
        type="string" 
        mode="replace" 
        value="&quot;${ProjDirPath}/Project_Settings/Linker_Files/ProcessorExpert.ld&quot;" 
        projectType="pe" 
        description="Use linker file generated by Processor Expert"
      />
    </tool>  
  </toolchain>  
</toolchains>