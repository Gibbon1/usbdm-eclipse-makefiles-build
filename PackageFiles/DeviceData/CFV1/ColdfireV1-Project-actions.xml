      
      <!-- GNU Build options Coldfire MCF51 -->
      <projectActionList id="gnuSettings.mcf51" root="usbdm_resource_path/Stationery/CFV1/" >
         <createFolder  target="Sources"                        type="" />
         <createFolder  target="Startup_Code"                   type="" />
         <createFolder  target="Project_Headers"                type="include" />
         <createFolder  target="Project_Settings/Linker_Files"  type="" />
         <projectOption id="net.sourceforge.usbdm.cdt.coldfire.toolchain.mcpu"         > <value>net.sourceforge.usbdm.cdt.coldfire.toolchain.mcpu.51</value> </projectOption>
         <projectOption id="net.sourceforge.usbdm.cdt.arm.toolchain.buildtools"        > <value>$(buildToolId)</value> </projectOption>
         <projectOption id="net.sourceforge.usbdm.cdt.toolchain.c.linker.linkerFile"   > <value>$(linkerFile)</value> </projectOption>
         <projectOption id="net.sourceforge.usbdm.cdt.toolchain.cpp.linker.linkerFile" > <value>$(linkerFile)</value> </projectOption>
         <projectOption id="gnu.c.link.option.paths" >                                   <value>&quot;${ProjDirPath}/Project_Settings/Linker_Files&quot;</value> </projectOption>
         <projectOption id="gnu.cpp.link.option.paths" >                                 <value>&quot;${ProjDirPath}/Project_Settings/Linker_Files&quot;</value> </projectOption>
      </projectActionList>
      
      <!--Base MCF51 files -->
      <projectActionList id="Coldfire-V1-files" root="usbdm_resource_path/Stationery/CFV1/" >
         <copy source="$(externalVectorTable)"                                    target="Startup_Code/vectors.c" />
         <copy source="$(externalLinkerScript)"                                   target="Project_Settings/Linker_Files/Custom.ld" />
         <copy source="$(externalHeaderFile)"                                     target="Project_Headers/$(targetDevice).h" />
         <copy source="Startup_Code/sysinit.c"                                    target="Startup_Code/sysinit.c" />
         <copy source="Startup_Code/vectors.c"                                    target="Startup_Code/vectors.c" />
         <copy source="Startup_Code/newlib_stubs.c"                               target="Startup_Code/newlib_stubs.c" />
         <copy source="Startup_Code/startup_Codesourcery.S"                       target="Startup_Code/startup_Codesourcery.S" />
         <copy source="Startup_Code/startup_Codesourcery_c.c"                     target="Startup_Code/startup_Codesourcery_c.c" />
         <copy source="Project_Settings/Debug.launch"                             target="Project_Settings/$(projectName)-Debug.launch" />
         <copy source="Project_Settings/Linker_Files/Codesourcery-ram.ld"         target="Project_Settings/Linker_Files/Codesourcery-ram.ld" />
         <copy source="Project_Settings/Linker_Files/Codesourcery-ram-hosted.ld"  target="Project_Settings/Linker_Files/Codesourcery-ram-hosted.ld" />
         <copy source="Project_Settings/Linker_Files/Codesourcery-rom.ld"         target="Project_Settings/Linker_Files/Codesourcery-rom.ld" />
         <copy source="Project_Settings/Linker_Files/Codesourcery-rom-hosted.ld"  target="Project_Settings/Linker_Files/Codesourcery-rom-hosted.ld" />
         <copy source="Project_Settings/Linker_Files/MemoryMap.ld"                target="Project_Settings/Linker_Files/MemoryMap-$(targetDeviceName).ld" />
         <copy source="Project_Headers/derivative.h"                              target="Project_Headers/derivative.h" />
         <copy source="Project_Headers/TargetDevice.h"                            target="Project_Headers/$(targetDevice).h" />
         <copy source="Project_Headers/utilities.h"                               target="Project_Headers/utilities.h" />
         <copy source="Sources/main.c"                                            target="Sources/main.c" />
      </projectActionList>

      <projectActionList id="Coldfire-V1-ProjectActions" >
      	<projectActionListRef ref="gnuSettings.mcf51" />
      	<projectActionListRef ref="Coldfire-V1-files" />
      </projectActionList>

      <!-- Extra Optional files for Coldfire V1 -->
      <projectActionList id="Options-file-list-CFV1" root="usbdm_resource_path/Stationery/CFV1/" >
         <variable id="Clock-setup-CFV1" name="Clock setup code"       description="Adds code for basic clock initialization - check assumptions made" />
         <condition variable="Clock-setup-CFV1" >
            <copy source="Startup_Code/clock-cfv1.c"                      target="Startup_Code/clock.c" />
            <copy source="Project_Headers/clock_private-cfv1.h"  	  target="Project_Headers/clock_private.h" />
            <copy source="Project_Headers/clock.h"                        target="Project_Headers/clock.h" />
         </condition>
      </projectActionList>

      <!-- Extra Optional files for Coldfire V1+ -->
      <projectActionList id="Options-file-list-CFV1Plus" root="usbdm_resource_path/Stationery/CFV1/" >
         <variable id="Clock-setup-CFV1Plus" name="Clock setup code"       description="Adds code for basic clock initialization - check assumptions made" />
         <variable id="UART-setup-CFV1Plus"  name="UART setup code"        description="Adds C stdio (UART) support for newlib" />
         <condition variable="Clock-setup-CFV1Plus" >
            <copy source="Startup_Code/clock-cfv1plus.c"                   target="Startup_Code/clock.c" />
            <copy source="Project_Headers/clock_private-cfv1plus.h"        target="Project_Headers/clock_private.h" />
            <copy source="Project_Headers/clock.h"                         target="Project_Headers/clock.h" />
         </condition>
         <condition variable="UART-setup-CFV1Plus">
            <copy source="Startup_Code/uart.c"                         target="Startup_Code/uart.c" />
            <copy source="Project_Headers/uart.h"                      target="Project_Headers/uart.h" />
            <copy source="Project_Headers/Freedom.h"                   target="Project_Headers/Freedom.h" />
            <copy source="Sources/main-uart.c"                         target="Sources/main.c" />
         </condition>
      </projectActionList>

