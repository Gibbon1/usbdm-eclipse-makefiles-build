<!--
Devices using this peripheral: 
      MKE02Z2
      MKE02Z4
      MKE04Z4
      MKE04Z8M4
      MKE06Z4
-->
      <peripheral>
         <?sourceFile "FGPIOA_MKE" ?>
         <?refreshWholePeripheral?>
         <name>FGPIOA</name>
         <description>General Purpose Input/Output</description>
         <prependToName>FGPIOA</prependToName>
         <baseAddress>0xF8000000</baseAddress>
         <size>32</size>
         <access>read-write</access>
         <resetValue>0x0</resetValue>
         <resetMask>0xFFFFFFFF</resetMask>
         <addressBlock>
            <offset>0x0</offset>
            <size>0x4</size>
            <usage>registers</usage>
         </addressBlock>
         <addressBlock>
            <offset>0x4</offset>
            <size>0xC</size>
            <usage>registers</usage>
         </addressBlock>
         <addressBlock>
            <offset>0x10</offset>
            <size>0xC</size>
            <usage>registers</usage>
         </addressBlock>
         <registers>
            <register>
               <name>PDOR</name>
               <description>Port Data Output Register\n
Controls the level driven on pin provided it is configured as GPIO output</description>
               <addressOffset>0x0</addressOffset>
               <fields>
                  <field>
                     <name>PTA</name>
                     <description>Port Data Output</description>
                     <bitOffset>0</bitOffset>
                     <bitWidth>8</bitWidth>
                     <enumeratedValues>
                        <enumeratedValue>
                           <name>0b0</name>
                           <description>Low</description>
                           <value>0b0</value>
                        </enumeratedValue>
                        <enumeratedValue>
                           <name>0b1</name>
                           <description>High</description>
                           <value>0b1</value>
                        </enumeratedValue>
                     </enumeratedValues>
                  </field>
                  <field derivedFrom="PTA" > <name>PTB</name> <bitOffset>8</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTC</name> <bitOffset>16</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTD</name> <bitOffset>24</bitOffset> </field>
               </fields>
            </register>
            <register>
               <name>PSOR</name>
               <description>Port Set Output Register\n
Writing 1 to a bit sets the corresponding bit in the PDOR</description>
               <addressOffset>0x4</addressOffset>
               <access>write-only</access>
               <fields>
                  <field>
                     <name>PTA</name>
                     <description>Port Set Output</description>
                     <bitOffset>0</bitOffset>
                     <bitWidth>8</bitWidth>
                     <enumeratedValues>
                        <enumeratedValue>
                           <name>0bX</name>
                           <description>Write 1 to set</description>
                           <isDefault>true</isDefault>
                        </enumeratedValue>
                     </enumeratedValues>
                  </field>
                  <field derivedFrom="PTA" > <name>PTB</name> <bitOffset>8</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTC</name> <bitOffset>16</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTD</name> <bitOffset>24</bitOffset> </field>
               </fields>
            </register>
            <register>
               <name>PCOR</name>
               <description>Port Clear Output Register\n
Writing 1 to a bit clears the corresponding bit in the PDOR</description>
               <addressOffset>0x8</addressOffset>
               <access>write-only</access>
               <fields>
                  <field>
                     <name>PTA</name>
                     <description>Port Clear Output</description>
                     <bitOffset>0</bitOffset>
                     <bitWidth>8</bitWidth>
                     <enumeratedValues>
                        <enumeratedValue>
                           <name>0bX</name>
                           <description>Write 1 to clear</description>
                           <isDefault>true</isDefault>
                        </enumeratedValue>
                     </enumeratedValues>
                  </field>
                  <field derivedFrom="PTA" > <name>PTB</name> <bitOffset>8</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTC</name> <bitOffset>16</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTD</name> <bitOffset>24</bitOffset> </field>
               </fields>
            </register>
            <register>
               <name>PTOR</name>
               <description>Port Toggle Output Register\n
Writing 1 to a bit toggles the corresponding bit in the PDOR</description>
               <addressOffset>0xC</addressOffset>
               <access>write-only</access>
               <fields>
                  <field>
                     <name>PTA</name>
                     <description>Port Toggle Output</description>
                     <bitOffset>0</bitOffset>
                     <bitWidth>8</bitWidth>
                     <enumeratedValues>
                        <enumeratedValue>
                           <name>0bX</name>
                           <description>Write 1 to toggle</description>
                           <isDefault>true</isDefault>
                        </enumeratedValue>
                     </enumeratedValues>
                  </field>
                  <field derivedFrom="PTA" > <name>PTB</name> <bitOffset>8</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTC</name> <bitOffset>16</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTD</name> <bitOffset>24</bitOffset> </field>
               </fields>
            </register>
            <register>
               <name>PDIR</name>
               <description>Port Data Input Register\n
This register directly reflects the value on the port pins if configured as GPIO</description>
               <addressOffset>0x10</addressOffset>
               <access>read-only</access>
               <fields>
                  <field>
                     <name>PTA</name>
                     <description>Port Data Input</description>
                     <bitOffset>0</bitOffset>
                     <bitWidth>8</bitWidth>
                     <enumeratedValues>
                        <enumeratedValue>
                           <name>0b0</name>
                           <description>Pin is low</description>
                           <value>0b0</value>
                        </enumeratedValue>
                        <enumeratedValue>
                           <name>0b1</name>
                           <description>Pin is high</description>
                           <value>0b1</value>
                        </enumeratedValue>
                     </enumeratedValues>
                  </field>
                  <field derivedFrom="PTA" > <name>PTB</name> <bitOffset>8</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTC</name> <bitOffset>16</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTD</name> <bitOffset>24</bitOffset> </field>
               </fields>
            </register>
            <register>
               <name>PDDR</name>
               <description>Port Data Direction Register\n
Controls the direction of port pins</description>
               <addressOffset>0x14</addressOffset>
               <fields>
                  <field>
                     <name>PTA</name>
                     <description>Port Data Direction</description>
                     <bitOffset>0</bitOffset>
                     <bitWidth>8</bitWidth>
                     <enumeratedValues>
                        <enumeratedValue>
                           <name>0b0</name>
                           <description>Input</description>
                           <value>0b0</value>
                        </enumeratedValue>
                        <enumeratedValue>
                           <name>0b1</name>
                           <description>Output</description>
                           <value>0b1</value>
                        </enumeratedValue>
                     </enumeratedValues>
                  </field>
                  <field derivedFrom="PTA" > <name>PTB</name> <bitOffset>8</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTC</name> <bitOffset>16</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTD</name> <bitOffset>24</bitOffset> </field>
               </fields>
            </register>
            <register>
               <name>PIDR</name>
               <description>Port Input Disable Register\n
Used to disable the pin input function</description>
               <addressOffset>0x18</addressOffset>
               <resetValue>0xFFFFFFFF</resetValue>
               <fields>
                  <field>
                     <name>PTA</name>
                     <description>Port Input Disable\n
Disables a pin as General Purpose Input. Corresponding Pin Data Input Register bit will read zero</description>
                     <bitOffset>0</bitOffset>
                     <bitWidth>8</bitWidth>
                     <enumeratedValues>
                        <enumeratedValue>
                           <name>0b1</name>
                           <description>Input available</description>
                           <value>0b1</value>
                        </enumeratedValue>
                        <enumeratedValue>
                           <name>1</name>
                           <description>Input reads as 0</description>
                           <value>0b1</value>
                        </enumeratedValue>
                     </enumeratedValues>
                  </field>
                  <field derivedFrom="PTA" > <name>PTB</name> <bitOffset>8</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTC</name> <bitOffset>16</bitOffset> </field>
                  <field derivedFrom="PTA" > <name>PTD</name> <bitOffset>24</bitOffset> </field>
               </fields>
            </register>
         </registers>
      </peripheral>
