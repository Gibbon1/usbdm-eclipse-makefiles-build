                        <enumeratedValue>
                           <name>0b0111</name>
                           <description>Bus clock / 8</description>
                           <value>0b0111</value>
                        </enumeratedValue>
                        <enumeratedValue>
                           <name>0b1000</name>
                           <description>Bus clock / 9</description>
                           <value>0b1000</value>
                        </enumeratedValue>
                        <enumeratedValue>
                           <name>0b1001</name>
                           <description>Bus clock / 10</description>
                           <value>0b1001</value>
                        </enumeratedValue>
                        <enumeratedValue>
                           <name>0b1010</name>
                           <description>Bus clock / 11</description>
                           <value>0b1010</value>
                        </enumeratedValue>
                        <enumeratedValue>
