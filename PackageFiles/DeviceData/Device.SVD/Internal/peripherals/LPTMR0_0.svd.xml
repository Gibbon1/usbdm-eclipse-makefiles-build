                        </enumeratedValue>
                        <enumeratedValue>
                           <name>0b1</name>
                           <description>Event\tLPTMR Counter Register has equalled the LPTMR Compare Register and incremented</description>
                           <value>0b1</value>
                        </enumeratedValue>
                     </enumeratedValues>
                  </field>
               </fields>
